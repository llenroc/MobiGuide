<Window x:Class="MobiGuide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobiGuide"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Height="25" VerticalAlignment="Top" Margin="10,10,10,0" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Logged In As :" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBlock x:Name="nameTxtBlock" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <Button x:Name="logoutBtn" Content="Logout" VerticalAlignment="Center" Width="45" Height="20" Click="logoutBtn_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" VerticalAlignment="Top" Orientation="Horizontal" >
            <Image x:Name="logoImg" HorizontalAlignment="Left" Width="50" Height="50" Margin="0,0,20,0"/>
            <TextBlock x:Name="airlineNameTxtBlock" VerticalAlignment="Bottom" TextWrapping="Wrap"/>
        </StackPanel>

    </Grid>
</Window>
